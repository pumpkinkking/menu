<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.menu.menu.mapper.IngredientMapper">
    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.menu.menu.entity.Ingredient">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="category" property="category"/>
        <result column="unit" property="unit"/>
        <result column="status" property="status"/>
        <result column="created_time" property="createdTime"/>
        <result column="updated_time" property="updatedTime"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, name, category, unit, status, created_time, updated_time
    </sql>

    <!-- 根据ID查询 -->
    <select id="selectById" resultMap="BaseResultMap">
        select <include refid="Base_Column_List"/> from ingredient where id = #{id}
    </select>

    <!-- 查询所有 -->
    <select id="selectAll" resultMap="BaseResultMap">
        select <include refid="Base_Column_List"/> from ingredient
    </select>

    <!-- 根据分类查询 -->
    <select id="selectByCategory" resultMap="BaseResultMap">
        select <include refid="Base_Column_List"/> from ingredient where category = #{category}
    </select>

    <!-- 新增 -->
    <insert id="insert" parameterType="com.menu.menu.entity.Ingredient">
        insert into ingredient (name, category, unit, status, created_time, updated_time)
        values (#{name}, #{category}, #{unit}, #{status}, now(), now())
    </insert>

    <!-- 更新 -->
    <update id="updateById" parameterType="com.menu.menu.entity.Ingredient">
        update ingredient
        set name = #{name},
            category = #{category},
            unit = #{unit},
            status = #{status},
            updated_time = now()
        where id = #{id}
    </update>

    <!-- 删除 -->
    <delete id="deleteById">
        delete from ingredient where id = #{id}
    </delete>
</mapper>