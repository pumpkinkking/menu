<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.menu.menu.mapper.MenuMapper">
    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.menu.menu.entity.Menu">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="description" property="description"/>
        <result column="category" property="category"/>
        <result column="cooking_time" property="cookingTime"/>
        <result column="difficulty" property="difficulty"/>
        <result column="status" property="status"/>
        <result column="user_id" property="userId"/>
        <result column="created_time" property="createdTime"/>
        <result column="updated_time" property="updatedTime"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, name, description, category, cooking_time, difficulty, status, user_id, created_time, updated_time
    </sql>

    <!-- 根据ID查询 -->
    <select id="selectById" resultMap="BaseResultMap">
        select <include refid="Base_Column_List"/> from menu where id = #{id}
    </select>

    <!-- 查询所有 -->
    <select id="selectAll" resultMap="BaseResultMap">
        select <include refid="Base_Column_List"/> from menu
    </select>

    <!-- 根据用户ID查询 -->
    <select id="selectByUserId" resultMap="BaseResultMap">
        select <include refid="Base_Column_List"/> from menu where user_id = #{userId}
    </select>

    <!-- 根据分类查询 -->
    <select id="selectByCategory" resultMap="BaseResultMap">
        select <include refid="Base_Column_List"/> from menu where category = #{category}
    </select>

    <!-- 新增 -->
    <insert id="insert" parameterType="com.menu.menu.entity.Menu">
        insert into menu (name, description, category, cooking_time, difficulty, status, user_id, created_time, updated_time)
        values (#{name}, #{description}, #{category}, #{cookingTime}, #{difficulty}, #{status}, #{userId}, now(), now())
    </insert>

    <!-- 更新 -->
    <update id="updateById" parameterType="com.menu.menu.entity.Menu">
        update menu
        set name = #{name},
            description = #{description},
            category = #{category},
            cooking_time = #{cookingTime},
            difficulty = #{difficulty},
            status = #{status},
            user_id = #{userId},
            updated_time = now()
        where id = #{id}
    </update>

    <!-- 删除 -->
    <delete id="deleteById">
        delete from menu where id = #{id}
    </delete>
</mapper>