# EditorConfig is awesome: https://EditorConfig.org

# 顶级配置文件
root = true

# 所有文件通用配置
[*]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

# Java文件特殊配置
[*.java]
indent_size = 4
max_line_length = 120

# XML文件配置
[*.xml]
indent_size = 2

# 属性文件配置
[*.{properties,yml}]
indent_size = 2

# Markdown文件配置
[*.md]
trim_trailing_whitespace = false